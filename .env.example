# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Cost Optimization Settings
USE_CHEAP_MODELS=true
OCR_MODEL=gpt-4o-mini
TEXT_MODEL=gpt-3.5-turbo
VISION_MODEL=gpt-4o-mini

# Alternative LLM Services (Even Cheaper!)
USE_ALTERNATIVE_LLMS=false
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OLLAMA_BASE_URL=http://localhost:11434

# AWS Configuration (Optional - for Textract fallback)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=eu-central-1

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=10

# AI Processing Configuration
CONFIDENCE_THRESHOLD=0.80
OCR_QUALITY_THRESHOLD=0.70
HIGH_VALUE_THRESHOLD=10000.0
ENABLE_TEXTRACT_FALLBACK=true

# API Configuration
API_TITLE="Invoice Analyzer API"
API_VERSION="1.0.0"
API_DESCRIPTION="AI-powered invoice analysis with OCR and LLM integration"
