# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Cost Optimization Settings
USE_CHEAP_MODELS=true
OCR_MODEL=gpt-4o-mini
TEXT_MODEL=gpt-3.5-turbo
VISION_MODEL=gpt-4o-mini

# Alternative LLM Services (Even Cheaper!)
USE_ALTERNATIVE_LLMS=false
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration (Tier 1 - Primary OCR)
OLLAMA_BASE_URL=http://192.168.0.201:11434
OLLAMA_MODEL=llava:13b
OLLAMA_TIMEOUT=30
OLLAMA_ENABLED=true

# AWS Configuration (Optional - for Textract fallback)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=eu-central-1

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=10

# AI Processing Configuration - Dynamic 3-Tier Fallback System

# Tier Configuration - Define order and enabled tiers
# OCR_TIER_ORDER: Comma-separated list defining tier execution order
# Available tiers: ollama, openai, textract
OCR_TIER_ORDER=ollama,openai,textract

# OCR_ENABLED_TIERS: Comma-separated list of enabled tiers
# Only these tiers will be used (must be subset of available tiers)
OCR_ENABLED_TIERS=ollama,openai,textract

# Individual Tier Enable/Disable Flags
OLLAMA_ENABLED=true
OPENAI_OCR_ENABLED=true
TEXTRACT_ENABLED=true

# Confidence Thresholds per Tier
OLLAMA_CONFIDENCE_THRESHOLD=0.80
OPENAI_CONFIDENCE_THRESHOLD=0.75
TEXTRACT_CONFIDENCE_THRESHOLD=0.85

# Legacy/Additional Configuration
HIGH_VALUE_THRESHOLD=10000.0
ENABLE_TEXTRACT_FALLBACK=true

# Legacy settings (for backward compatibility)
CONFIDENCE_THRESHOLD=0.80
OCR_QUALITY_THRESHOLD=0.70

# API Configuration
API_TITLE="Invoice Analyzer API"
API_VERSION="1.0.0"
API_DESCRIPTION="AI-powered invoice analysis with OCR and LLM integration"
